<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in data[1] %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ content.year }}</span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          {% for event in content.events %}
            {% assign event_name = event.name | default: event | strip %}
            {% assign event_details = event.details | default: '' | strip %}

            {% if event_details == '' and event_name contains '(' and event_name contains ')' %}
              {% assign name_parts = event_name | split: '(' %}
              {% assign event_name = name_parts[0] | strip %}
              {% assign detail_with_paren = name_parts[1] | split: ')' %}
              {% assign event_details = detail_with_paren[0] | strip %}
            {% endif %}

            <div class="conference-entry ml-1 ml-md-4">
              <span class="conference-name">{{ event_name }}</span>
              {% if event_details != '' %}
                <span class="conference-details">{{ event_details }}</span>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
