<ul class="card-text font-weight-light list-group list-group-flush">
  {% for grant in data[1] %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ grant.years | replace: '-', ' â€“ ' }}
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4 cv-entry-title">{{ grant.title }}</h6>
          <p class="mb-0 ml-1 ml-md-4 cv-note">
            {% if grant.role %}
              {% if grant.role == 'PI' %}Principal Investigator.{% elsif grant.role == 'Co-I' %}Participant.{% else %}{{ grant.role }}.{% endif %}
            {% endif %}
            {% if grant.agency %}
              {{ grant.agency }}{% if grant.grant %} Grant {{ grant.grant }}{% endif %}.
            {% endif %}
          </p>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
